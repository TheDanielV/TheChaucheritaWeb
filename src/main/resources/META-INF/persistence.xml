<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="ProyectoWeb" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>modelo.entidades.Usuario</class>
        <class>modelo.entidades.Movimiento</class>
        <class>modelo.entidades.Cuenta</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/proyectoweb" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="" />
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="eclipselink.ddl-generation" value="create-tables" />
            <!-- property name="eclipselink.ddl-generation" value="drop-and-create-tables"/-->
            <!--property name="eclipselink.ddl-generation" value="none" /-->
        </properties>


    </persistence-unit>

</persistence>